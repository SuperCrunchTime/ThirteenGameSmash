<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/whole_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/felt5"
    android:orientation="vertical">
    <!--android: android:background="@drawable" ^ needs a drawable bacground! should be put into the relative layout-->


    <RelativeLayout
        android:id="@+id/player2left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="false">

        <ImageView
            android:id="@+id/image2left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="false"
            android:background="@mipmap/ic_launcher" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/player2front"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/image2front"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/ic_launcher" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/player2right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/hand2left"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp">

        <ImageView
            android:id="@+id/image2right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/ic_launcher" />
    </RelativeLayout>


    <Button
        android:id="@+id/passbutt"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/player2front"
        android:background="@drawable/gray_button2"
        android:elevation="0dp"
        android:paddingBottom="3dp"
        android:text="@string/pass" />

    <ImageView
        android:id="@+id/hand2left"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/player2left"
        android:layout_toEndOf="@+id/player2left"
        android:adjustViewBounds="true"
        android:background="@drawable/back"
        android:scaleType="fitStart" />


    <ImageView
        android:id="@+id/hand2right"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/player2right"
        android:layout_toStartOf="@+id/player2right"
        android:background="@drawable/back"
        android:scaleType="fitEnd" />

    <Button
        android:id="@+id/playbutt"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/player2front"
        android:background="@drawable/gray_button"
        android:paddingBottom="3dp"
        android:text="@string/play" />

    <Button
        android:id="@+id/menubutton"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/settings" />

    <ImageView
        android:id="@+id/hand2front"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/player2front"
        android:background="@drawable/back"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/passbutt"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/passbutt"
        android:text="@string/player" />

    <TextView
        android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/player2left"
        android:layout_below="@id/player2left"
        android:text="@string/player" />

    <TextView
        android:id="@+id/player3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/menubutton"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@+id/player2front"
        android:text="@string/player" />

    <TextView
        android:id="@+id/player4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/player2right"
        android:layout_below="@id/player2right"
        android:text="@string/player" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hand2front"
        android:layout_above="@+id/player2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp">

                <ImageView
                    android:id="@+id/play_pile1"
                    android:layout_width="50dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="0dp"
                    android:adjustViewBounds="false" />

                <ImageView
                    android:id="@+id/play_pile2"
                    android:layout_width="50dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="25dp"
                    android:adjustViewBounds="false" />

                <ImageView
                    android:id="@+id/play_pile3"
                    android:layout_width="50dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="50dp"
                    android:adjustViewBounds="false" />

                <ImageView
                    android:id="@+id/play_pile4"
                    android:layout_width="50dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="75dp"
                    android:adjustViewBounds="false" />

                <ImageView
                    android:id="@+id/play_pile5"
                    android:layout_width="50dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="100dp"
                    android:adjustViewBounds="false" />

                <ImageView
                    android:id="@+id/play_pile6"
                    android:layout_width="50dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="125dp"
                    android:adjustViewBounds="false" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp">


                <ImageView
                    android:id="@+id/play_pile7"
                    android:layout_width="50dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="0dp"
                    android:adjustViewBounds="false" />

                <ImageView
                    android:id="@+id/play_pile8"
                    android:layout_width="50dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="25dp"
                    android:adjustViewBounds="false" />

                <ImageView
                    android:id="@+id/play_pile9"
                    android:layout_width="50dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="50dp"
                    android:adjustViewBounds="false" />

                <ImageView
                    android:id="@+id/play_pile10"
                    android:layout_width="50dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="75dp"
                    android:adjustViewBounds="false" />

                <ImageView
                    android:id="@+id/play_pile11"
                    android:layout_width="50dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="100dp"
                    android:adjustViewBounds="false" />

                <ImageView
                    android:id="@+id/play_pile12"
                    android:layout_width="50dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="125dp"
                    android:adjustViewBounds="false" />

                <ImageView
                    android:id="@+id/play_pile13"
                    android:layout_width="50dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="150dp"
                    android:adjustViewBounds="false" />

            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/player_cards"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/passbutt"
        android:layout_alignParentStart="true"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/card1"
                android:layout_width="50dp"
                android:layout_height="68dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="0dp"
                android:adjustViewBounds="false"
                android:clickable="true" />

            <ImageView
                android:id="@+id/card2"
                android:layout_width="50dp"
                android:layout_height="68dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:adjustViewBounds="false"
                android:clickable="true" />

            <ImageView
                android:id="@+id/card3"
                android:layout_width="50dp"
                android:layout_height="68dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:adjustViewBounds="false"
                android:clickable="true" />

            <ImageView
                android:id="@+id/card4"
                android:layout_width="50dp"
                android:layout_height="68dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="75dp"
                android:adjustViewBounds="false"
                android:clickable="true" />

            <ImageView
                android:id="@+id/card5"
                android:layout_width="50dp"
                android:layout_height="68dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="100dp"
                android:adjustViewBounds="false"
                android:clickable="true" />

            <ImageView
                android:id="@+id/card6"
                android:layout_width="50dp"
                android:layout_height="68dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="125dp"
                android:adjustViewBounds="false"
                android:clickable="true" />

            <ImageView
                android:id="@+id/card7"
                android:layout_width="50dp"
                android:layout_height="68dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="150dp"
                android:adjustViewBounds="false"
                android:clickable="true" />

            <ImageView
                android:id="@+id/card8"
                android:layout_width="50dp"
                android:layout_height="68dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="175dp"
                android:adjustViewBounds="false"
                android:clickable="true" />

            <ImageView
                android:id="@+id/card9"
                android:layout_width="50dp"
                android:layout_height="68dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="200dp"
                android:adjustViewBounds="false"
                android:clickable="true" />

            <ImageView
                android:id="@+id/card10"
                android:layout_width="50dp"
                android:layout_height="68dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="225dp"
                android:adjustViewBounds="false"
                android:clickable="true" />

            <ImageView
                android:id="@+id/card11"
                android:layout_width="50dp"
                android:layout_height="68dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="250dp"
                android:adjustViewBounds="false"
                android:clickable="true" />

            <ImageView
                android:id="@+id/card12"
                android:layout_width="50dp"
                android:layout_height="68dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="275dp"
                android:adjustViewBounds="false"
                android:clickable="true" />

            <ImageView
                android:id="@+id/card13"
                android:layout_width="50dp"
                android:layout_height="68dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="300dp"
                android:adjustViewBounds="false"
                android:clickable="true" />
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>